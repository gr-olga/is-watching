{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["apps/web/src/*"],
      "@Public/*": ["apps/web/public/*"],
      "@E2E": ["apps/e2e/src/index.ts"],
      "@E2E/*": ["apps/e2e/src/*"],
      "@GUI": ["packages/gui/src/index.ts"],
      "@GUI/*": ["packages/gui/src/*"],
      "@Menu": ["packages/menu/src/index.ts"],
      "@Menu/*": ["packages/menu/src/*"],
      "@Shared": ["packages/shared/src/index.ts"],
      "@Shared/*": ["packages/shared/src/*"],
      "@I18N": ["packages/i18n/src/index.ts"],
      "@I18N/*": ["packages/i18n/src/*"],
      "platform:api": ["apps/web/src/Platform/Drivers/web"],
      "gui/src/main": ["apps/web/types/gui-shim"],
      "menu/src/main": ["apps/web/types/menu-shim"]
    }
  },
  "include": ["src", "vite.config.ts", "types", "dist-desktop", "dist-web", "dist-mobile", "dist"]
}
